<Page x:Class="Kurs2.Pages.DriversPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:custom="clr-namespace:Kurs2.Custom"
      Title="Гонщики">

    <Grid Margin="24">
        <md:Card Padding="24"
             Background="{DynamicResource MaterialDesignPaper}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0 0 0 16">
                    <Button Content="Добавить"
                  Click="Add_Click"
                  Style="{StaticResource MaterialDesignRaisedButton}"
                  Margin="0 0 8 0"/>
                    <Button Content="Сохранить"
                  Click="Save_Click"
                  Style="{StaticResource MaterialDesignRaisedButton}"
                  Margin="0 0 8 0"/>
                    <Button Content="Удалить"
                            Visibility="Collapsed"
                  Style="{StaticResource MaterialDesignRaisedButton}"/>
                </StackPanel>

                <DataGrid x:Name="DriversGrid"
                  Grid.Row="1"
                  ItemsSource="{Binding Drivers}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  md:DataGridAssist.CellPadding="8">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Фамилия"
                                Binding="{Binding LastName}"
                                Width="2*"/>
                        <DataGridTextColumn Header="Имя"
                                Binding="{Binding FirstName}"
                                Width="2*"/>
                        <DataGridTextColumn Header="Дата рождения"
                                Binding="{Binding DateOfBirth, StringFormat=d}"
                                Width="*"/>
                        <DataGridTextColumn Header="Национальность"
                                Binding="{Binding Nationality}"
                                Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </md:Card>

        <Border x:Name="Overlay"
            Background="#80000000"
            CornerRadius="8"
            Opacity="0"
            Visibility="Collapsed"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
            <custom:AddDriverCard x:Name="AddDriverCardCtrl"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
        </Border>

        <StackPanel x:Name="ToastContainer"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Orientation="Vertical"
            Panel.ZIndex="100"/>
    </Grid>
</Page>
